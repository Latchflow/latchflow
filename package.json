{
  "name": "latchflow",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "dev": "echo 'dev server not yet implemented'",
    "prepare": "husky install",
    "env:load": "dotenvx run -f .env -f .env.defaults --ignore=MISSING_ENV_FILE --",
    "dev:core": "pnpm run env:load pnpm -F core dev",
    "db:migrate": "pnpm run env:load pnpm -F db migrate",
    "db:generate": "pnpm run env:load pnpm -F db generate"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "@dotenvx/dotenvx": "^1.48.4",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --check",
      "tsc --noEmit"
    ]
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
