# ─────────────────────────────
# Latchflow — Root Environment
# Copy to `.env` and fill in values
# ─────────────────────────────

# ── Database (Postgres 16 via Docker Compose)
DATABASE_URL=postgresql://latchflow:latchflow@localhost:5432/latchflow?schema=public

# ── MinIO (S3-compatible storage for bundles)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=latchflow-bundles
# MINIO_USE_SSL=false

# ── MailHog (local email capture for dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# ── Core Service
PORT=3001
NODE_ENV=development
PLUGINS_PATH=packages/plugins

# ── Queue Driver (pluggable)
# Defaults to in-memory if not set
QUEUE_DRIVER=memory
# Optional: provide a custom module path or config
# QUEUE_DRIVER_PATH=./packages/plugins/queue/redis
# QUEUE_CONFIG_JSON={"host":"localhost","port":6379}

# ── Security
# Per-bundle encryption key (dev only — use KMS or secrets manager in prod)
BUNDLE_ENCRYPTION_KEY=changeme-super-secret-key

# ── Admin UI / Portal
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
